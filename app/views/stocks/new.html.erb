

<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Create a new stock</h3>
          <%= simple_form_for(@stock) do |f| %>
            <%= f.input :title %>
            <%= f.input :category %>
            <%= f.input :region %>
            <%= f.input :year %>
            <%= f.input :photo, as: :file %>
            <%= f.submit class: "btn btn-warning" %>
          <% end %>
      </div>
    </div>
  </div>
</div>
