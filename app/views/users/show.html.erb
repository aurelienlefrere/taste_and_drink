<div class="container">
  <%# === EN-TÃŠTE DE PAGE === %>
  <div class="td-page-header">
    <h1 class="td-page-title"><%= @user.first_name %> <%= @user.last_name %></h1>
  </div>

  <%# === CARD PRINCIPALE === %>
  <div class="td-profile-main-card">
    <%# Avatar et nom %>
    <div class="td-profile-header">
      <div class="td-profile-avatar-large">
        <% if @user.photo.present? %>
          <%= image_tag(@user.photo, alt: @user.first_name) %>
        <% else %>
          <span class="td-avatar-initials-large">
            <%= @user.first_name&.first %><%= @user.last_name&.first %>
          </span>
        <% end %>
      </div>
    </div>

    <%# === PROFIL ALIMENTAIRE === %>
    <div class="td-profile-section">
      <div class="td-section-divider"></div>

      <div class="td-profile-badges">
        <% if @user.diet.present? %>
          <span class="td-profile-badge td-badge-diet">
            <i class="fas fa-leaf"></i>
            <%= @user.diet %>
          </span>
        <% end %>

        <% if @user.allergy.present? %>
          <span class="td-profile-badge td-badge-allergy">
            <i class="fas fa-exclamation-triangle"></i>
            <%= @user.allergy %>
          </span>
        <% end %>
      </div>
    </div>

    <%# === PRÃ‰FÃ‰RENCES VINICOLES === %>
    <% if @user.like.present? || @user.dislike.present? %>
      <div class="td-profile-section">
        <div class="td-section-divider"></div>

        <div class="td-profile-preferences">
          <% if @user.like.present? %>
            <div class="td-preference-row">
              <i class="fas fa-heart text-success"></i>
              <span class="td-preference-text">
                <strong>Aime :</strong> <%= @user.like %>
              </span>
            </div>
          <% end %>

          <% if @user.dislike.present? %>
            <div class="td-preference-row">
              <i class="fas fa-heart-broken text-danger"></i>
              <span class="td-preference-text">
                <strong>N'aime pas :</strong> <%= @user.dislike %>
              </span>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <%# === AMIS EN COMMUN === %>
  <% if @friends.any? %>
    <div class="td-profile-friends-section">
      <h2 class="td-section-title-small">Amis en commun (<%= @friends.count %>)</h2>

      <div class="td-profile-friends-grid">
        <% @friends.each do |friend| %>
          <%= link_to user_path(friend), class: "td-profile-friend-item" do %>
            <div class="td-profile-friend-avatar">
              <% if friend.photo.present? %>
                <%= image_tag(friend.photo, alt: friend.first_name) %>
              <% else %>
                <span class="td-avatar-initials-small">
                  <%= friend.first_name&.first %><%= friend.last_name&.first %>
                </span>
              <% end %>
            </div>
            <span class="td-profile-friend-name"><%= friend.first_name %></span>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>

  <%# === ACTIONS === %>
  <div class="td-profile-actions">
    <% if current_user == @user %>
      <%= link_to edit_user_registration_path, class: "btn btn-gold btn-montserrat" do %>
        <i class="fas fa-edit"></i>
        Ã‰diter mon profil
      <% end %>
    <% else %>
      <button class="btn btn-gold btn-montserrat">
        <i class="fas fa-envelope"></i>
        Envoyer un message
      </button>
    <% end %>
  </div>
</div>
